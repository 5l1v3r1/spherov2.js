{
  "name": "sphero-v2",
  "version": "0.0.1",
  "description": "V2 api version for sphero toys (not official)",
  "author": "igbopie",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "rm -fR lib; tsc --declaration; exit 0",
    "add-all": "git add -A",
    "test": "jest",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [ "precommit-msg", "test", "build" , "add-all" ],
  "dependencies": {
    "@types/noble": "^0.0.34",
    "noble": "^1.9.0",
    "pre-commit": "^1.2.2",
    "ts-node": "^5.0.0",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/jest": "^22.1.4",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts}",
      "!src/examples/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
