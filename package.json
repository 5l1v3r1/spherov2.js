{
  "name": "spherov2",
  "version": "0.0.1",
  "description": "V2 api version for sphero toys (not official)",
  "author": "igbopie",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "debug": "ts-node --inspect-brk src/index.ts",
    "start": "ts-node src/index.ts",
    "build": "rm -fR lib; tsc --declaration",
    "add-all": "git add -A",
    "test": "jest",
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "hid-sm": "ts-node src/examples/hid-sm",
    "hid-lm": "ts-node src/examples/hid-lm",
    "patrol": "ts-node src/examples/patrol",
    "cmd": "ts-node src/examples/cmd",
    "collision": "ts-node src/examples/collisionDetection",
    "police": "ts-node src/examples/police",
    "sensor": "ts-node src/examples/sensor"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test",
    "build",
    "add-all"
  ],
  "dependencies": {
    "@types/node-hid": "^0.5.2",
    "noble": "^1.9.0",
    "node-hid": "^0.7.2"
  },
  "devDependencies": {
    "@types/jest": "^22.1.4",
    "@types/noble": "^0.0.34",
    "jest": "^22.4.2",
    "node-inspect": "^1.11.3",
    "pre-commit": "^1.2.2",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts}",
      "!src/examples/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
